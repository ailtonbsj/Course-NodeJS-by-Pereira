<% include ../header %>

  <div class="container">
    <header class="mt-5">
      <h1>Ntalk - Agenda de contatos</h1>
    </header>
    <form action="/contatos/<%- id %>?_method=PUT" method="post">
      <h2>Editar contato</h2>
      <input type="text" name="nome" placeholder="Nome" value="<%- contato.nome %>" class="form-control mb-3">
      <input type="text" name="email" placeholder="E-mail" value="<%- contato.email %>" class="form-control mb-3">
      <button type="submit" class="btn btn-primary">Atualizar contato</button>
    </form>
  </div>

  <% include ../footer %>